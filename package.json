{
  "name": "deep-roots",
  "version": "1.0.0",
  "description": "MERN Stack web application for Deep Roots",
  "main": "server.js",
  "scripts": {
    "test": "mocha server/tests",
    "client-install": "npm install --prefix client",
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODCUTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Team SixC at UF",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.2.2",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "nodemon": "^1.19.4"
  }
}
